FROM node:18-slim

# Install pnpm
RUN npm install -g pnpm@9

WORKDIR /app

# Copy API app
COPY apps/api ./apps/api

# Install dependencies
WORKDIR /app/apps/api
RUN pnpm install --frozen-lockfile

# Build TypeScript
RUN pnpm build

# Expose port
EXPOSE 3002

# Start API server
CMD ["node", "dist/src/index.js"]
